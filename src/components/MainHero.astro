  <!-- Right Side - Shield Protection Symbol -->
  <div
    class="absolute right-0 top-1/2 -translate-y-1/2 w-80 h-80 opacity-15 hidden lg:block"
  >
    <svg
      class="w-full h-full"
      viewBox="0 0 200 220"
      fill="none"
      xmlns="http://www.w3.org/2000/svg"
    >
      <!-- Shield -->
