      viewBox="0 0 24 36"
      fill="currentColor"
    >
      <path
        d="M12 0C12 0 0 14 0 22C0 29.732 5.373 36 12 36C18.627 36 24 29.732 24 22C24 14 12 0 12 0Z"
      ></path>
    </svg>
    <!-- Droplet 2 -->
    <svg
      class="absolute top-[5%] right-[20%] w-6 h-9 text-light-teal-300 opacity-30 animate-[bounce_4s_ease-in-out_infinite_0.5s]"
      viewBox="0 0 24 36"
      fill="currentColor"
    >
      <path
        d="M12 0C12 0 0 14 0 22C0 29.732 5.373 36 12 36C18.627 36 24 29.732 24 22C24 14 12 0 12 0Z"
      ></path>
    </svg>
    <!-- Droplet 3 -->
    <svg
      class="absolute top-[15%] right-[35%] w-5 h-7 text-light-teal-400 opacity-35 animate-[bounce_3.5s_ease-in-out_infinite_1s]"
      viewBox="0 0 24 36"
      fill="currentColor"
    >
      <path
        d="M12 0C12 0 0 14 0 22C0 29.732 5.373 36 12 36C18.627 36 24 29.732 24 22C24 14 12 0 12 0Z"
      ></path>
    </svg>
    <!-- Droplet 4 -->
