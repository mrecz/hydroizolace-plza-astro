        d="M100 30L160 52V100C160 140 132 172 100 188C68 172 40 140 40 100V52L100 30Z"
        fill="currentColor"
        class="text-dark-teal-700"></path>
      <!-- Checkmark inside shield -->
      <path
        d="M75 105L95 125L130 85"
        stroke="currentColor"
        class="text-light-teal-400"
        stroke-width="8"
        stroke-linecap="round"
        stroke-linejoin="round"></path>
      <!-- Water drops bouncing off shield -->
      <g class="animate-[pulse_2s_ease-in-out_infinite]">
        <circle
          cx="30"
          cy="70"
          r="6"
          fill="currentColor"
