        x="60"
        y="180"
        width="40"
        height="50"
        rx="2"
        fill="currentColor"
        class="text-dark-teal-600"></rect>
      <rect
        x="120"
        y="180"
        width="40"
        height="50"
        rx="2"
        fill="currentColor"
