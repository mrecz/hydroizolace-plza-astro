---
import MainLayout from "@/layouts/main.astro";
import ContactForm from "@/components/ContactForm.astro";
---

<MainLayout
  title="Kontakt - Hydroizolace Plza"
  description="Kontaktujte nás pro bezplatnou konzultaci a cenovou nabídku. Hydroizolace plochých střech, renovace balkónů a teras."
>
  <!-- Page Header -->
  <section class="bg-light-gray-50 py-16 md:py-24">
    <div
      class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center"
      data-aos="fade-up"
    >
      <h1 class="h1 text-light-gray-900 mb-6">Kontakt</h1>
      <p class="text-xl text-light-gray-600 max-w-2xl mx-auto">
        Máte dotaz nebo zájem o naše služby? Neváhejte nás kontaktovat. Rádi vám
        poskytneme bezplatnou konzultaci a cenovou nabídku.
      </p>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Contact Information -->
        <div data-aos="fade-up">
          <h2 class="h2 text-light-gray-900 mb-8">Kontaktní informace</h2>

          <div class="space-y-6">
            <div class="flex items-start">
              <div class="flex-shrink-0">
                <div
                  class="w-12 h-12 bg-light-gray-100 rounded-lg flex items-center justify-center"
                >
                  <svg
                    class="w-6 h-6 text-light-gray-700"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                    ></path>
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
              </div>
              <div class="ml-4">
                <h3 class="text-lg font-semibold text-light-gray-900 mb-1">
                  Adresa
                </h3>
                <p class="text-light-gray-600">
                  Češkova 1358
                  <br />
                  53002 Pardubice
                </p>
              </div>
            </div>

            <div class="flex items-start">
              <div class="flex-shrink-0">
                <div
                  class="w-12 h-12 bg-light-gray-100 rounded-lg flex items-center justify-center"
                >
                  <svg
                    class="w-6 h-6 text-light-gray-700"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                    ></path>
                  </svg>
                </div>
              </div>
              <div class="ml-4">
                <h3 class="text-lg font-semibold text-light-gray-900 mb-1">
                  Telefon
                </h3>
                <p class="text-light-gray-600">+420 776 568 259</p>
              </div>
            </div>

            <div class="flex items-start">
              <div class="flex-shrink-0">
                <div
                  class="w-12 h-12 bg-light-gray-100 rounded-lg flex items-center justify-center"
                >
                  <svg
                    class="w-6 h-6 text-light-gray-700"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                    ></path>
                  </svg>
                </div>
              </div>
              <div class="ml-4">
                <h3 class="text-lg font-semibold text-light-gray-900 mb-1">
                  E-mail
                </h3>
                <p class="text-light-gray-600">DavidPlza@seznam.cz</p>
              </div>
            </div>

            <div class="flex items-start">
              <div class="flex-shrink-0">
                <div
                  class="w-12 h-12 bg-light-gray-100 rounded-lg flex items-center justify-center"
                >
                  <svg
                    class="w-6 h-6 text-light-gray-700"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
              </div>
              <div class="ml-4">
                <h3 class="text-lg font-semibold text-light-gray-900 mb-1">
                  Pracovní doba
                </h3>
                <p class="text-light-gray-600">Flexibilní dle domluvy</p>
              </div>
            </div>

            <div class="flex items-start">
              <div class="flex-shrink-0">
                <div
                  class="w-12 h-12 bg-light-gray-100 rounded-lg flex items-center justify-center"
                >
                  <svg
                    class="w-6 h-6 text-light-gray-700"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"
                    ></path>
                  </svg>
                </div>
              </div>
              <div class="ml-4">
                <h3 class="text-lg font-semibold text-light-gray-900 mb-1">
                  Oblast působení
                </h3>
                <p class="text-light-gray-600">
                  Pardubický kraj, Královehradecký kraj, Praha, Středočeský
                  kraj, Vysočina
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div>
          <h2 class="h2 text-light-gray-900 mb-8" data-aos="fade-up">
            Napište nám
          </h2>
          <ContactForm />
        </div>
      </div>
    </div>
  </section>

  <!-- Map Section (placeholder) -->
  <section class="py-20 bg-light-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-8" data-aos="fade-up">
        <h2 class="h2 text-light-gray-900 mb-4">Kde nás najdete</h2>
      </div>
      <div
        class="bg-light-gray-200 rounded-lg h-96 flex items-center justify-center"
        data-aos="fade-up"
        data-aos-delay="100"
      >
        <iframe
          style="border:none"
          src="https://mapy.com/s/baruhobeta"
          width="700"
          class="w-full h-full rounded-lg"
          frameborder="0"></iframe>
      </div>
    </div>
  </section>
</MainLayout>
